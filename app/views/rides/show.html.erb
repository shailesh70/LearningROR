<% provide(:title, 'Ride details') %>
<h1>Details About Ride </h1>
<div class="container" role="main">
  <div class="row">
    <aside class="col-sm-4">
      <section>
        <h1>
          <%= gravatar_for @userdetail %>
          <%= @userdetail.name %>
        </h1>
        Rating 3.2
      </section>
      <section>
        <h4>
            <ul class="list-group">
              <li class="list-group-item"> Gender     : <%= @userdetail.gender %></li>
              <li class="list-group-item"> Birth Year : <%= @userdetail.year_of_birth  %></li>
              <li class="list-group-item"> Mob Number : <%= @userdetail.phone_number %></li>
              <li class="list-group-item"> About      : <%= @userdetail.bio %></li>
            </ul>
          </h4>
      </section>
    </aside>
  </div>
  <div class= "row">
    <div class="col-sm-10 col-md-12">
      <section>
        <table class=" table">
        <thead class="thead-light">
          <tr>
            <th>Sr No.</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Date</th>
            <th>Time</th>
            <th>Price</th>
            <th>Seats</th>
            <th></th>
          </tr>
        </thead>
          <% srno =1 %>
            <tr>
              <td><%= srno %></td>
              <td><%=@ridedetail.source %></td>
              <td><%=@ridedetail.destination %></td>
              <td><%=@ridedetail.date_of_journey %></td>
              <td><%=@ridedetail.time %></td>
              <td><%=@ridedetail.price %></td>
              <td><%=@ridedetail.seats %></td>
              <td><%= link_to "Book Ride", '#' %></td>             </tr>
          <%srno+=1%>
        </table>
      </section>
    </div>

  </div>
</div>









