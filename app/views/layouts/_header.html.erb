<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container" >
      <div class="nav pull-left" >
      	<%= link_to image_tag("header.png", alt: "BlaBlaCar"), root_path %>
  	  </div>
      <nav>
        <ul class="nav pull-right">
          <li class="mr-1"><%= link_to "Find Ride",find_ride_path, class: "btn btn-large btn-primary "%></li>
          
          <li class="mr-1"><%= link_to "Offer a Ride",new_ride_path, class: "btn btn-large btn-primary mr-1"%></li>
          <% if signed_in? %>
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_path %></li>
            <li><%= link_to "Log in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>